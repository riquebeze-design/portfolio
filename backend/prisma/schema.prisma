// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum WorkCategory {
  BRANDING
  WEBSITE
  SYSTEM
  ADVERTISING
  THREED
  OTHER
}

enum WorkType {
  DESIGN
  DEVELOPMENT
  MARKETING
  ANIMATION
  PHOTOGRAPHY
  OTHER
}

enum WorkStatus {
  DRAFT
  PUBLISHED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Work {
  id          String      @id @default(uuid())
  title       String
  slug        String      @unique
  category    WorkCategory
  type        WorkType
  year        Int
  client      String?
  description String
  tags        String      @db.Text // Stored as JSON string
  featured    Boolean     @default(false)
  status      WorkStatus  @default(DRAFT)
  coverImageUrl String
  externalUrl String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  images      WorkImage[]
}

model WorkImage {
  id      String @id @default(uuid())
  url     String
  order   Int    @default(0)
  work    Work   @relation(fields: [workId], references: [id], onDelete: Cascade)
  workId  String
}

model Lead {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}