// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Alterado para postgresql
  url      = env("DATABASE_URL")
}

enum WorkCategory {
  BRANDING
  WEBSITE
  SYSTEM
  ADVERTISING
  THREED
  OTHER
}

enum WorkType {
  DESIGN
  DEVELOPMENT
  MARKETING
  ANIMATION
  PHOTOGRAPHY
  OTHER
}

enum WorkStatus {
  DRAFT
  PUBLISHED
}

// O modelo User será removido, pois a autenticação será gerenciada pelo Supabase.
// Se você precisar de perfis de usuário adicionais, eles serão criados em uma tabela separada
// e vinculados ao ID do usuário do Supabase.

model Work {
  id          String      @id @default(uuid())
  title       String
  slug        String      @unique
  category    WorkCategory // Usando enum nativo
  type        WorkType     // Usando enum nativo
  year        Int
  client      String?
  description String
  tags        String      @db.Text // Ainda armazenado como JSON string para flexibilidade
  featured    Boolean     @default(false)
  status      WorkStatus  @default(DRAFT) // Usando enum nativo
  coverImageUrl String
  externalUrl String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  images      WorkImage[]
}

model WorkImage {
  id      String @id @default(uuid())
  url     String
  order   Int    @default(0)
  work    Work   @relation(fields: [workId], references: [id], onDelete: Cascade)
  workId  String
}

model Lead {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}