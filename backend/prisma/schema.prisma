generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Work {
  id            String      @id @default(uuid())
  title         String
  slug          String      @unique
  category      String // Changed from WorkCategory
  type          String      // Changed from WorkType
  year          Int
  client        String?
  description   String
  tags          String      @default("[]") // Changed from String[] @db.Json
  featured      Boolean     @default(false)
  status        String      @default("DRAFT") // Changed from WorkStatus
  coverImageUrl String
  externalUrl   String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  images        WorkImage[]
}

model WorkImage {
  id     String @id @default(uuid())
  url    String
  order  Int    @default(0)
  work   Work   @relation(fields: [workId], references: [id], onDelete: Cascade)
  workId String

  @@unique([workId, url])
  @@index([workId])
}

model Lead {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}