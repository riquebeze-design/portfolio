// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Enums WorkCategory, WorkType e WorkStatus foram removidos daqui
// e serão gerenciados no nível da aplicação (frontend/src/types/work.ts)
// para compatibilidade com SQLite.

model Work {
  id            String      @id @default(uuid())
  title         String
  slug          String      @unique
  category      String      // Alterado para String
  type          String      // Alterado para String
  year          Int
  client        String?
  description   String
  tags          String      @db.Text // Stored as JSON string
  featured      Boolean     @default(false)
  status        String      @default("DRAFT") // Alterado para String, default como string literal
  coverImageUrl String
  externalUrl   String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  images        WorkImage[]
}

model WorkImage {
  id     String @id @default(uuid())
  url    String
  order  Int    @default(0)
  workId String
  work   Work   @relation(fields: [workId], references: [id], onDelete: Cascade)

  @@unique([workId, order])
}

model Lead {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}